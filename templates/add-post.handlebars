<div id="go-back">
    <button class="btn btn-primary"><span class="glyphicon glyphicon-arrow-left"></span></button>
</div>

<div class="form-group form-wrapper">
    <label class="label-center" for="car-brand">Car Brand</label>
    <input type="text" class="form-control" id="car-brand">
    <label class="btn btn-default btn-file">
        Select image <input type="file" id="image-file" class="hide" onchange="">
    </label>
    <br />
    <span class='label label-info' id="upload-file-info"></span>
    <br />
    <label class="label-center" for="description">Category</label>
    <select class="form-control" name="category" id="category">
        <option value="sport">Sport</option>
        <option value="family-car">Family Car</option>
        <option value="SUV">SUV</option>
        <option value="luxury">Luxury</option>
        <option value="electric">Electric</option>
        <option value="compact">Compact</option>
    </select>
    <label class="label-center" for="description">Description</label>
    <textarea class="form-control" id="description" rows="4"></textarea>
    <button class="btn btn-lg btn-primary btn-block submit" id="submit-post">Add Post</button>
</div>