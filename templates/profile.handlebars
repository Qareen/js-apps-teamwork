<div class="post-container">
    <div class="panel panel-default">
        <div class="panel-heading text-center">
            <h3>Profile details</h3>
        </div>
        <div class="panel-body">
            <div class="center-block">
                <img id="detailsPicture" src="{{this.photoURL}}" alt="Your profile picture">
                <div id="profileInfoContainer">
                    <p>Email: {{this.email}}</p>
                    <p>Display name: {{this.displayName}}</p>
                    <p></p>
                </div>
                <button id="changePic" type="button" class="btn btn-primary">
                    {{#if this.PhotoUrl}}
                        Change profile picture
                    {{else}}
                        Add profile picture
                    {{/if}}
                </button>
                <div id="changePicContainer" class="form-group row">
                    <div class="col-xs-3">
                        <label for="ex1">Picture URL:</label>
                        <input class="form-control" id="ex1" type="text">
                        <button class="btn btn-success">Submit</button>
                    </div>
                </div>
            </div>
        </div>

        <button type="button" class="btn btn-circle btn-lg" id="add-post">
            <i class="glyphicon glyphicon-plus"></i>
        </button>
    </div>